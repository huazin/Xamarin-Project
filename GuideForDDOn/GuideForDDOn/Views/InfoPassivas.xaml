<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuideForDDOn.Views.InfoPassivas"
             Title="Passivas">
    <StackLayout>
        <ListView ItemsSource= "{Binding ListRef}" x:Name="ListaDaView" SelectedItem="{Binding ItemSelecao, Mode=TwoWay}" VerticalOptions="FillAndExpand" HasUnevenRows="true" SeparatorColor="AliceBlue">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout Orientation= "Vertical" VerticalOptions="FillAndExpand">
                                <Label Text= "{Binding nome}" TextColor="#228B22" FontSize="18" HorizontalOptions="Center"/>
                                <StackLayout Orientation= "Horizontal">
                                    <Label Text= "Descrição: " TextColor="#00FF7F"/>
                                </StackLayout>
                                <Label Text= "{Binding descricao}"/>
                                <StackLayout Orientation= "Horizontal">
                                    <Label Text= "Nivel: " TextColor="#00FF7F"/>
                                    <Label Text= "{Binding nivel}"/>
                                </StackLayout>
                                <StackLayout Orientation= "Horizontal">
                                    <Label Text= "Custo de AP: " TextColor="#00FF7F"/>
                                    <Label Text= "{Binding ap}"/>
                                </StackLayout>
                                <Label Text= ""/>
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>